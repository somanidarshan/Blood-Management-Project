<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    tools:context=".ProfileActivity"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#Be5025"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp" android:id="@+id/toolbar"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/type"
        android:textAllCaps="true"
        android:textColor="#000"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/profileImage"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_image"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:id="@+id/name" android:textAllCaps="true" android:textColor="#000" android:gravity="center" android:textStyle="bold" android:textSize="18sp" android:layout_margin="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/email" android:textColor="#000" android:gravity="center" android:textSize="18sp" android:layout_margin="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/idNumber" android:textColor="#000" android:gravity="center" android:textSize="18sp" android:layout_margin="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/phoneNumber" android:textColor="#000" android:gravity="center" android:textSize="18sp" android:layout_margin="5dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/bloodGroup" android:textColor="#000" android:gravity="center" android:textSize="18sp" android:layout_margin="5dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@drawable/buttons_background" android:id="@+id/backButton" android:textColor="#fff" android:gravity="center" android:textStyle="bold" android:textSize="20sp" android:text="Back" android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>

</LinearLayout>